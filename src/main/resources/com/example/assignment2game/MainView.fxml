<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<!-- Main layout container for the application's user interface -->
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment2game.MainController">
    <children>
        <!-- Text field for entering the game search query -->
        <TextField fx:id="searchField" />

        <!-- Button to trigger the search action -->
        <Button text="Search" onAction="#searchGames" />

        <!-- List view to display the search results -->
        <ListView fx:id="listView" onMouseClicked="#displayGameDetails" />

        <!-- Labels to display selected game details -->
        <Label fx:id="gameNameLabel" />
        <Label fx:id="gameDescriptionLabel" />

        <!-- ImageView to display the selected game's image -->
        <ImageView fx:id="gameImageView" fitHeight="200" fitWidth="200" />
    </children>
</VBox>
