<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<!-- Main layout container for the application's user interface -->
<VBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.example.assignment2game.MainController"
      alignment="CENTER"
      spacing="10"
      styleClass="root">

    <!-- Title text for the search section -->
    <Text text="Search for a Game" styleClass="label"/>

    <!-- Text field for entering the game search query -->
    <TextField fx:id="searchField" promptText="Search for a game..." />

    <!-- Button to trigger the search action -->
    <Button text="Search" onAction="#searchGames" />

    <!-- List view to display the search results -->
    <ListView fx:id="listView" onMouseClicked="#displayGameDetails" />
</VBox>
